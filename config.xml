<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Magic Itinerary Maker</name>
    <description>
        A Apache Cordova application for 2016 Capstone project.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Team Disneyland
    </author>
    <content src="index.html" />
	<icon src="www/img/logo.png" />
	<splash src="platforms/android/res/splash2.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="SetFullscreen" value="true" />
		<preference name="BackgroundColor" value="#ffffff"/>
			<preference name="SplashScreen" value="screen" />
			<preference name="SplashScreenDelay" value="3000" /> <!-- defaults to "3000" -->
			<preference name="SplashScreenBackgroundColor" value="#336600" /> <!-- defaults to "#464646" -->
			<preference name="SplashMaintainAspectRatio" value="true" />
			<preference name="SplashShowOnlyFirstTime" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
